{
    "tasks": [
        {
            "label":"build-debug",
            "command":"make",
            "args": ["all"],
            "type": "shell",
            "problemMatcher": [
                "$gcc"
            ],
            "group": {           
                 "kind": "build",
                 "isDefault": true
             },
             "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared", //这里shared表示共享，改成new之后每个进程创建新的端口
                "showReuseMessage": true,
                "clear": true
             }
        }
